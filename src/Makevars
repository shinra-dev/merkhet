PKG_CPPFLAGS = -I../inst/RNACI


MERKHET_OBJS = \
		merkhet/platform.o \
		merkhet/procinfo.o \
		merkhet/sysinfo.o

R_OBJS   = wrappers.o merkhet_native.o

OBJECTS = $(MERKHET_OBJS) $(R_OBJS)

### Start making here.
all: $(SHLIB)

$(SHLIB): $(OBJECTS)

clean:
		@rm -rf *.o *.d *.rc *.so* *.dylib *.dll *.a *.lib \
				$(SHLIB) $(OBJECTS) $(ROBJECTS)
